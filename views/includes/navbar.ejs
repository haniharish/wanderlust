<style>
  .btn-search{
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .btn-search:hover{
    background-color: #fe424d;
    color: #fff;
  }
  .btn-search i{
    display: inline;
    margin-right: 0.5rem;
  }
  .search-input{
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
  .login-btn{
    border: 1px solid ;
    border-radius: 1rem;
    background-color: #fe424d;
    color: #fff !important;
    padding: 0.5rem 1.5rem 0.5rem 1.5rem !important;
  }
  .login-btn:hover{
    opacity: 0.8;
  }
  .signup-btn{
    border: 1px solid ;
    border-radius: 1rem;
    background-color: #fe424d;
    color: #fff !important;
    padding: 0.5rem 1.5rem 0.5rem 1.5rem !important;
    margin-right: 1rem;
  }
  .signup-btn:hover{opacity: 0.8;}
  .logout-btn{
    border: 1px solid ;
    border-radius: 1rem;
    background-color: #fe424d;
    color: #fff !important;
    padding: 0.5rem 1.5rem 0.5rem 1.5rem !important;
    margin-right: 1rem;
  }
  .logout-btn:hover{opacity: 0.8;}
